<h1>this is all of the appointments</h1>
<h4> <%= flash[:appt_notice] %></h4>

<%= form_tag(appointments_path, method: "get") do %>
  <%= label_tag("appt_search", "Search for:") %>
  <%= text_field_tag :appt_search%>
  <%= submit_tag("Go") %>
<% end %><br>

<% @appointments.each do |appt| %>
<li><%= link_to appt.title, appointment_path(appt) %></li>
<%= appt.location %>
<%= appt.dog.name%>
<%= appt.user_id%>
<%= appt.description %> <br>
<% end %>
<br>
