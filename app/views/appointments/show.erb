  <div class="row">
    <div class="col s4 offset-s2">
      <div class="card">

      <div class="card-content">
        <p>Appointment Title: <%= @appointment.title %> </p>
        <%if @appointment.user %>
        <p>Taken By: <%= @appointment.user.full_name %></p>
