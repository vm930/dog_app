  </div>

    <div class="dog-profile-pic">
    <img src="/dogingrass.jpg" style="width:500px;height:500px;">
    </div>

    <div class="appointment_make_button">
    <%  if current_user.class.model_name.name == "User" && @appointment.user_id == nil %>
    <%= button_to "Take Appointment", appointment_helper_path(@appointment.id), :method => :patch, class:"waves-effect waves-light btn-large blue-grey lighten-3" %>
    
    </div>

     <div class="delete_dog_button">
    <%= button_to "Delete", @appointment, :method => :delete, class: "waves-effect waves-light btn-large blue-grey lighten-3"%>
    </div>
