<h1> Login </h1>

<h4> <%= flash[:notice] %></h4>

<%= form_tag(login_path) do %>

  <%= label_tag :username%>
  <%= text_field_tag :username%> <br>

  <%= label_tag :password%>
  <%= password_field_tag :password%> <br>

  <%= label_tag "Sign in as" %>
  <%= select_tag "dog_or_user","<option>Dog</option><option>User</option>".html_safe%> <br>

  <%= submit_tag "Login"%>
<% end %>
